<% content_for :head do %>
  <style>
    <%= @page.style -%>
  </style>
<% end if @page.style %>
<%= content_tag(:hi, @page.name) if @page.show_header? %>
<%= RedCloth.new(@page.content).to_html %>

<%- if current_user -%>
  <%= link_to 'All Pages', pages_path %> |
  <%= link_to 'Edit', page_url(@page) %> 
<%- end -%>
