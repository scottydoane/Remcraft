<h1>Add a New Category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.hidden_field :parent_id, :value => params[:parent_id] %>
    <%= f.submit "Create" %>
  </p>
<% end %>


<%= link_to 'Back', categories_path %>
