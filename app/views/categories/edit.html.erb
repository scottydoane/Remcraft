<h1>Edit an Existing Category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit "Update" %>
    or
    <%= link_to 'Delete', category_path(@category), :confirm => "Are you sure you want to do this?\r\n\r\nDeleting a category will also delete any sub-categories associated with this category. This is irreversible.", :method => 'delete' %>
    
  </p>
<% end %>


<%= link_to 'Back', categories_path %>
