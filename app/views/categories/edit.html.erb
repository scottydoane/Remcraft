<% content_for :subnavigation do %>
<%= render :partial => 'subnavigation' %>
<% end -%>

<h1>Edit an Existing Category</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description, :size => '66x8' %>
  </p>

  <p>
    <%= f.submit "Update", :class => 'submit' %>
    or
    <%= link_to 'Delete', category_path(@category), :confirm => "Are you sure you want to do this?\r\n\r\nDeleting a category will also delete any sub-categories associated with this category. This is not reversible.", :method => 'delete' %>
    
  </p>
<% end %>


<%= link_to 'Back', categories_path %>
