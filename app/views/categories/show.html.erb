<div class='category-description'>
  <%= image_tag @category.images.first.public_filename(:small) rescue nil %>
  <h1><%= @category.title %></h1>
  <p><%= @category.description %></p>  
  <div class="clear"></div>
</div>

<ul class='products'>
  <% for product in @category.products -%>
  <li>
    <div>
      <%= image_tag product.images.first.public_filename(:small) rescue nil %>
      <h2><%= link_to product.sku, product_path(product) %></h2>
      <b><%=h product.name %></b>
    </div>
  </li>
  <% end -%>
</ul>