<div class='category-description'>
  <h1><%= @category.title %></h1>
  <%= @category.description %> 
</div>

<h2 class='subcategory'>Sub-Category Title</h2>
<ul class='products'>
  <% for product in @category.products -%>
  <li>
    <a href='/products/<%= product.id %>' class='product'>
      <div class='image'>
        <%= image_tag product.images.first.public_filename(:small) rescue nil %>
      </div>
      <div class='text'>
        <p><%= product.product_code %></p>
        <b><%= product.name %></b>
      </div>
    </a>
  </li>
  <% end -%>
</ul>
